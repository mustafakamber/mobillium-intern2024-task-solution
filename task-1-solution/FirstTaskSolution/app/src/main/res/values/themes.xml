<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FirstTaskSolution" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColorPrimary">@color/light</item>
        <item name="android:textColorSecondary">@color/dark</item>
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="smallRegularTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="smallMediumTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="normalMediumTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="largeMediumTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="hugeBoldTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="smallImageView">
        <item name="android:tint">?attr/colorPrimary</item>
        <item name="android:layout_width">@dimen/smallImageSize</item>
        <item name="android:layout_height">@dimen/smallImageSize</item>
    </style>


    <style name="mediumImageView">
        <item name="android:tint">?attr/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/mediumMarginSize</item>
        <item name="android:layout_width">@dimen/mediumImageSize</item>
        <item name="android:layout_height">@dimen/mediumImageSize</item>
    </style>


    <style name="largeImageView">
        <item name="android:tint">?attr/colorPrimary</item>
        <item name="android:layout_width">@dimen/largeImageSize</item>
        <item name="android:layout_height">@dimen/largeImageSize</item>
    </style>


</resources>